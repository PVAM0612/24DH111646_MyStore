@model _24DH111646_MyStore.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">XÓA Sản Phẩm</h2>

<h4 class="bg-danger">bạn chắc chắn muốn xóa sản phẩm này chứ?</h4>
<div>
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>

        <dt>
            Đơn giá
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductImage)
        </dd>


        <dt>
            Danh mục
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt styte="padding:10px"></dt>

        <dd styte="padding:10px">
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.ProductName }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-primary btn-sm" })
        </dd>
    </dl>
</div>
